<p id="notice"><%= notice %></p>

<h1>Answers</h1>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>User</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <% @answers.each do |answer| %>
    <tr class="answer">
        <td><%= answer.name %></td>
        <td><%= answer.user.email %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
</table>